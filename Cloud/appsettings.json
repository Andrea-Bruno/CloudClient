{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Urls": "http://localhost:3692",
  "UsePullPushDataChannel": true, // If set to true, the app will use a pull-push data channel for communication with the server. This is useful for devices that do not support WebSockets or have issues with them.
  "CloudPath": "", // Indicate the path for the cloud files if different from AppData (the backslash should be written double '\\')
  "VirtualDisk": true, // If set to true, file storage will be within a virtual disk that can be locked with a password. If you enable this setting, the CloudPath must point to an empty directory (the virtual disk will be mounted there)
  "EntryPoint": null, // Used if not specified in the QR code. Server entry point address (for release use: "server.tc0.it")
  
  // ===== THEME CONFIGURATION =====
  // Available themes: "Modern", "Dark", "Compact", "Professional"
  // Set to null to use default Bootstrap styling
  "Theme": "Modern"
}
